<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="@dimen/button_drawable_bottom"
        android:left="@dimen/button_drawable_left"
        android:right="@dimen/button_drawable_right"
        android:top="@dimen/button_drawable_top">
        <shape android:shape="rectangle" >
            <solid android:color="@color/buttonBackgroundBluePressed" />

            <corners android:radius="@dimen/button_radius" />

            <stroke
                android:width="@dimen/button_black_border"
                android:color="@color/buttonBorderBlack" />
        </shape>
    </item>

</layer-list>
